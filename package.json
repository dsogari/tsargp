{
  "name": "tsargp",
  "version": "0.2.3",
  "description": "Argument parser for TypeScript",
  "homepage": "https://trulysimple.dev/tsargp",
  "license": "MIT",
  "keywords": [
    "argument-parser",
    "command-line",
    "typescript"
  ],
  "bin": {
    "tsargp": "dist/examples/demo.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/index.min.js"
    },
    "./lib": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./enums": {
      "types": "./dist/enums/enums.d.ts",
      "default": "./dist/enums/enums.js"
    },
    "./examples": {
      "default": "./dist/examples/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "url": "git+https://github.com/trulysimple/tsargp.git"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.1.2",
    "@tsconfig/bun": "^1.0.4",
    "@types/bun": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "publint": "^0.2.7",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "scripts": {
    "prepare": "husky",
    "prepublishOnly": "npm version patch",
    "dist": "tsc -p lib && bun build dist/lib/index.js --outfile dist/index.min.js --minify",
    "distEnums": "tsc lib/enums.ts -d -m ESNext --skipLibCheck --preserveConstEnums --removeComments --outDir dist/enums && sed -i 's/const enum/enum/g' dist/enums/*.d.ts && tsc -p examples"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "browser": {
    "fs": false
  }
}
