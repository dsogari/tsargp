{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist/types",
    "rootDir": "lib",
    "types": ["bun", "node"],

    // Bundling
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    // "verbatimModuleSyntax": true, // https://github.com/microsoft/TypeScript/issues/40344
    
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "useUnknownInCatchVariables": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": ["lib"]
}
